@page
@model CarAplication.Pages.Requests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Car.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].PickupDate )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].ReturnDate )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Request)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Brand.BrandName)
                </td>
                <td>
                    @item.PickupDate.ToShortDateString()
                </td>
                <td>
                    @item.ReturnDate.ToShortDateString()
                </td>
                <td>
                    @String.Format("{0:C}", item.TotalPrice)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
